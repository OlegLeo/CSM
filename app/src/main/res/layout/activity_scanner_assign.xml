<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".ScannerAssignActivity">

    <SurfaceView
        android:id="@+id/sv_assign_camera"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginTop="32dp" />

    <TextView
        android:id="@+id/tv_assign_text_scanned"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:background="@android:drawable/editbox_background_normal"
        android:backgroundTint="@color/white"
        android:padding="10dp"
        android:textColor="@color/black"
        android:visibility="gone"
        android:textSize="30sp" />
    <TextView
        android:id="@+id/tv_assign_scanned_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:background="@android:drawable/editbox_background_normal"
        android:backgroundTint="@color/white"
        android:padding="10dp"
        android:textColor="@color/black"
        android:text="Ã€ espera pela leitura..."
        android:textSize="20sp" />
    <Button
        android:id="@+id/bt_assign_scan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:visibility="invisible"
        android:text="Associar" />

</LinearLayout>